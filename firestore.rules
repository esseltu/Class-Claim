rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to validate booking data structure
    function isValidBooking() {
      let data = request.resource.data;
      return data.keys().hasAll(['room', 'date', 'slot', 'courseCode', 'bookedBy', 'userId']) &&
             data.room is string &&
             data.date is string &&
             data.slot is string &&
             data.courseCode is string &&
             data.bookedBy is string &&
             data.userId is string &&
             data.bookedBy.size() > 0 &&
             data.courseCode.size() > 0;
    }

    match /bookings/{bookingId} {
      // Allow read access to everyone so the grid can display availability
      allow read: if true;
      
      // Allow create only if:
      // 1. User is authenticated
      // 2. Data is valid
      // 3. The userId in the document matches the authenticated user
      allow create: if request.auth != null && 
                       isValidBooking() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Allow delete only if the user owns the booking
      // (resource.data refers to the existing document)
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
      
      // Disallow updates to existing bookings
      allow update: if false;
    }
  }
}
